<div class="col-md-12">
  <head>
  <style>
body {
  background-image: url("/images/722.png");
  background-repeat: no-repeat;
  background-size: cover;
}

#text {
  color: #F9A825;
  font-size: 15px;
  font-weight: bolder;
}

#text2{
  color: #4E342E

}

.table-default{
  background-color: rgba(250, 250, 250, 0.4);
}

</style>
  </head>

  <div class="dropdown clearfix pull-right" style="padding-top: 50px; opacity: 0.6">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", jobs_path ) %>

        </li>
    </ul>
</div>
<body>
<table class="table table-default table-boldered custab">
  <thead id="text" style="color:black">
    <tr>
      <td>职缺</td>
      <td>薪资下限</td>
      <td>薪资上限</td>
      <td>创建时间</td>
      <tr>
  </thead>
  <tbody id="text2">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job)%>
      <%= link_to(job.title, admin_job_path(job), :style => "color:blue") %>
    </td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.wage_upper_bound %></td>
    <td>
      <%= local_time(job.created_at, '%B %e, %Y %l:%M%p') %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
<div class="text-center" style="opacity: 0.6">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
</body>
</div>
