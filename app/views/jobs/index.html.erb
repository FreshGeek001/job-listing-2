<div class="col-md-12">

<img src="/images/720.png" style="width:107.3%;min-height:200px;max-height:400px;margin: 0px -40px;">

<body>
  <table class="table table-boldered table-hover custab">
    <thead class="bg-info">
      <tr>
        <th>职缺</th>
        <th><%= link_to("薪资下限",jobs_path(:order => "by_lower_bound"),class:"btn btn-xs btn-primary") %>

        </th>
        <th><%= link_to("薪资上限", jobs_path(:order => "by_upper_bound"),class:"btn btn-xs btn-primary")%></th>
        <th><%= link_to("创建时间", jobs_path, class:"btn btn-xs btn-primary") %></th>
      </tr>
    </thead>
    <tbody>
      <%  @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= local_time(job.created_at, '%B %e, %Y %l:%M%p') %></td>
      </tr>
      <% end %>
      </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</body>

</div>
